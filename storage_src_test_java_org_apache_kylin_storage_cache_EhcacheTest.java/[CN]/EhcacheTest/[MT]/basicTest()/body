{
  CacheManager cacheManager=CacheManager.create();
  Cache testCache=new Cache(new CacheConfiguration("test",0).memoryStoreEvictionPolicy(MemoryStoreEvictionPolicy.LRU).eternal(false).timeToIdleSeconds(86400).diskExpiryThreadIntervalSeconds(0).maxBytesLocalHeap(100,MemoryUnit.MEGABYTES).persistence(new PersistenceConfiguration().strategy(PersistenceConfiguration.Strategy.NONE)));
  cacheManager.addCache(testCache);
  cacheManager.shutdown();
}
