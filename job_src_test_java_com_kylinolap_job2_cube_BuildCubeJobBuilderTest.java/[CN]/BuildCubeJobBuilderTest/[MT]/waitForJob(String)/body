{
  while (true) {
    AbstractExecutable job=jobService.getJob(jobId);
    System.out.println("job:" + jobId + " status:"+ job.getStatus());
    if (job.getStatus() == ExecutableState.SUCCEED || job.getStatus() == ExecutableState.ERROR) {
      break;
    }
 else {
      try {
        Thread.sleep(5000);
      }
 catch (      InterruptedException e) {
        e.printStackTrace();
      }
    }
  }
}
