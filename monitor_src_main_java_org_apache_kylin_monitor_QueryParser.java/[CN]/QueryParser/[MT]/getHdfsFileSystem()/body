{
  Configuration conf=new Configuration();
  conf.set("dfs.client.block.write.replace-datanode-on-failure.policy","NEVER");
  FileSystem fs=null;
  try {
    fs=FileSystem.get(conf);
  }
 catch (  IOException e) {
    fs.close();
    logger.info("Failed to get hdfs FileSystem",e);
  }
  return fs;
}
