{
  final StringBuilder buf=new StringBuilder();
  if (v >= 0) {
    buf.append('+');
  }
 else {
    buf.append('-');
    v=-v;
  }
  final int y;
  final int m;
switch (range) {
case YEAR:
    v=roundUp(v,12);
  y=v / 12;
buf.append(y);
break;
case YEAR_TO_MONTH:
y=v / 12;
buf.append(y);
buf.append('-');
m=v % 12;
number(buf,m,2);
break;
case MONTH:
m=v;
buf.append(m);
break;
default :
throw new AssertionError(range);
}
return buf.toString();
}
